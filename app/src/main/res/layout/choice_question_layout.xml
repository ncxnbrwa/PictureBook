<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choice_question_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusUp="@+id/iv_ball"
        android:nextFocusDown="@+id/iv_ball"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_choice1"
            style="@style/ImgHouseStyle"
            android:nextFocusLeft="@+id/iv_choice3"
            android:nextFocusRight="@+id/iv_choice2"
            android:src="@drawable/ip_05_sel" />

        <ImageView
            android:id="@+id/iv_choice2"
            style="@style/ImgHouseStyle"
            android:nextFocusLeft="@+id/iv_choice1"
            android:nextFocusRight="@+id/iv_choice3"
            android:src="@drawable/ip_06_sel"/>

        <ImageView
            android:id="@+id/iv_choice3"
            style="@style/ImgHouseStyle"
            android:nextFocusLeft="@+id/iv_choice2"
            android:nextFocusRight="@+id/iv_choice1"
            android:src="@drawable/ip_07_sel"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_house"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:nextFocusUp="@+id/ll_house"
        android:nextFocusDown="@+id/ll_house"
        android:src="@drawable/icon_ball" />
</RelativeLayout>